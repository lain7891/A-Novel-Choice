{{> navbar}}

<section>
    <div class="container">
        <div class="row">
            <div class="col s2"></div>
            <div class="col s8">
                <h4>Select Your Club</h4>
            </div>
            <div class="col s2"></div>
        </div>

        <!-- Club Selection Block -->
        <div class="row">
            <div class="col s2"></div>
            <div class="col s8">
                <select class="browser-default left" id="clubSelect">
                    <option value="" disabled selected>Select Club</option>
                    {{#each clubs}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col s1">
                <a href="#" class="btn-flat left" id="selectedClub"><i class="material-icons blue-text">search</i></a>
            </div>
            <div class="col s1"></div>
        </div>

        <div class="row">
            <div class="col s10" id="newClubLink">
                <a class="modal-trigger" href="#modalNewClub" id="newClub"><u>Create New Club</u></a>
            </div>
            <div class="col s2"></div>
        </div>
    </div>
</section>



