<!-- New Club -->
<div class="modal" id="modalNewClub">
    <div class="modal-content">
        <h4>Add A Club</h4>
        <hr>
        <div class="container">
            <h5>Enter Club Name:</h5>
            <div class="input-field col s12">
                <textarea id="clubName" class="materialize-textarea"></textarea>
                <label for="clubName">Club Name</label>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close btn-flat">Cancel</a>
            <a href="#!" class="modal-close waves-effect btn blue" id="saveNewClub">Save</a>
        </div>
    </div>
</div>

<!-- New Novel -->
<div class="modal" id="modalNewNovel">
    <div class="modal-content">
        <h4>Add A Novel</h4>
        <hr>
        <div class="container">
            <h5>Enter the novel details:</h5>
            <div class="input-field col s12">
                <textarea id="newBookTitle" class="materialize-textarea"></textarea>
                <label for="newBookTitle">Title</label>
            </div>
            <div class="input-field col s12">
                <textarea id="newBookAuthor" class="materialize-textarea"></textarea>
                <label for="newBookAuthor">Author</label>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close btn-flat">Cancel</a>
            <a href="#!" class="modal-close waves-effect btn blue" id="saveNewNovel">Save</a>
        </div>
    </div>
</div>

